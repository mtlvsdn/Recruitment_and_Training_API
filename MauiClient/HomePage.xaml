<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiClient.HomePage"
             Title="Home Page"
             BackgroundColor="White">

    <VerticalStackLayout Spacing="20" Padding="20">

        <!-- Registered Companies Card -->
        <Frame CornerRadius="10" HeightRequest="300" Padding="15" BackgroundColor="LightGrey">
            <HorizontalStackLayout>
                <Label Text="Registered Companies: "
                       FontSize="25"
                       FontAttributes="Bold"
                       VerticalOptions="Center"/>

                <Label x:Name="CompaniesCountLabel"
                       Text="0"
                       FontSize="25"
                       FontAttributes="Bold"
                       VerticalOptions="Center"/>
            </HorizontalStackLayout>
        </Frame>

        <!-- Active Licenses Card -->
        <Frame CornerRadius="10" HeightRequest="300" Padding="15" BackgroundColor="LightGrey">
            <HorizontalStackLayout>
                <Label Text="Active Licenses: "
                       FontSize="25"
                       FontAttributes="Bold"
                       VerticalOptions="Center"/>

                <Label x:Name="ActiveLicensesLabel"
                       Text="0"
                       FontSize="25"
                       FontAttributes="Bold"
                       VerticalOptions="Center"/>
            </HorizontalStackLayout>
        </Frame>

    </VerticalStackLayout>
</ContentPage>
