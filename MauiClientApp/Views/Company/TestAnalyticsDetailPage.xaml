<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:MauiClientApp.Models"
             x:Class="MauiClientApp.Views.Company.TestAnalyticsDetailPage"
             Title="Test Performance"
             BackgroundColor="Black">
    
    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackLayout Grid.Row="0" Margin="0,0,0,10">
            <Label Text="{Binding TestName}" 
                   TextColor="White" 
                   FontSize="24" 
                   FontAttributes="Bold"
                   HorizontalOptions="Center" 
                   Margin="0,0,0,5" />
            
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                <Label Text="Questions: " 
                       TextColor="LightGray" 
                       FontSize="16" />
                <Label Text="{Binding TotalQuestions}" 
                       TextColor="White" 
                       FontSize="16" 
                       Margin="0,0,10,0" />
                
                <Label Text="Time Limit: " 
                       TextColor="LightGray" 
                       FontSize="16" />
                <Label Text="{Binding TimeLimit}" 
                       TextColor="White" 
                       FontSize="16" />
                <Label Text=" min" 
                       TextColor="White" 
                       FontSize="16" />
            </StackLayout>
        </StackLayout>
        
        <!-- Analytics Header -->
        <StackLayout Grid.Row="1" Margin="0,10,0,5">
            <Label Text="Test Participants" 
                   TextColor="White" 
                   FontSize="18" 
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />
        </StackLayout>
        
        <!-- Loading indicator -->
        <ActivityIndicator Grid.Row="2" 
                           IsRunning="{Binding IsLoading}" 
                           IsVisible="{Binding IsLoading}"
                           Color="White" 
                           HorizontalOptions="Center" 
                           VerticalOptions="Center" />
        
        <!-- Status Message -->
        <StackLayout Grid.Row="2" 
                     IsVisible="{Binding HasNoUsers}"
                     VerticalOptions="Center" 
                     HorizontalOptions="Center">
            <Label Text="{Binding StatusMessage}" 
                   TextColor="White" 
                   FontSize="16" 
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center"
                   Margin="20,0"
                   LineBreakMode="WordWrap" />
            <Button Text="Refresh" 
                    Command="{Binding LoadResultsCommand}" 
                    BackgroundColor="#333333"
                    TextColor="White"
                    Margin="0,20,0,0"
                    HorizontalOptions="Center" />
        </StackLayout>
        
        <!-- Users and Results List -->
        <RefreshView Grid.Row="2" 
                     Command="{Binding LoadResultsCommand}" 
                     IsRefreshing="{Binding IsLoading}"
                     IsVisible="{Binding HasNoUsers, Converter={StaticResource InvertedBoolConverter}}">
            <CollectionView ItemsSource="{Binding UserResults}"
                            x:Name="ResultsCollectionView">
                <CollectionView.Header>
                    <Grid ColumnDefinitions="Auto,*,Auto,Auto,Auto" 
                          Padding="10,5" 
                          BackgroundColor="#222222">
                        <Label Text="Rank" 
                               Grid.Column="0"
                               TextColor="LightGray" 
                               FontSize="14" 
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               Margin="5,0" />
                        <Label Text="User" 
                               Grid.Column="1"
                               TextColor="LightGray" 
                               FontSize="14" 
                               FontAttributes="Bold"
                               Margin="10,0,0,0" />
                        <Label Text="Status" 
                               Grid.Column="2"
                               TextColor="LightGray" 
                               FontSize="14" 
                               FontAttributes="Bold"
                               HorizontalOptions="End"
                               Margin="5,0" />
                        <Label Text="Score" 
                               Grid.Column="3"
                               TextColor="LightGray" 
                               FontSize="14" 
                               FontAttributes="Bold"
                               HorizontalOptions="End"
                               Margin="5,0" />
                        <Label Text="Time" 
                               Grid.Column="4"
                               TextColor="LightGray" 
                               FontSize="14" 
                               FontAttributes="Bold"
                               HorizontalOptions="End"
                               Margin="5,0" />
                    </Grid>
                </CollectionView.Header>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:TestUserResult">
                        <Frame Margin="0,5" 
                               Padding="15" 
                               BackgroundColor="{Binding HasTakenTest, Converter={StaticResource BoolToColorConverter}, ConverterParameter='#333333,#222222'}"
                               BorderColor="Transparent"
                               CornerRadius="8">
                            <Grid ColumnDefinitions="Auto,*,Auto,Auto,Auto">
                                <!-- Rank -->
                                <Label Grid.Column="0" 
                                       Text="{Binding FormattedRank}" 
                                       TextColor="White"
                                       FontSize="16" 
                                       FontAttributes="{Binding HasTakenTest, Converter={StaticResource BoolToFontAttributesConverter}}"
                                       VerticalOptions="Center"
                                       HorizontalOptions="Center"
                                       MinimumWidthRequest="30" />
                                
                                <!-- User Info -->
                                <StackLayout Grid.Column="1" Spacing="3">
                                    <Label Text="{Binding FullName}" 
                                           TextColor="White"
                                           FontAttributes="Bold" 
                                           FontSize="15" />
                                    <Label Text="{Binding Email}" 
                                           TextColor="LightGray"
                                           FontSize="12" />
                                </StackLayout>
                                
                                <!-- Status -->
                                <Label Grid.Column="2" 
                                       Text="{Binding StatusText}" 
                                       TextColor="{Binding HasTakenTest, Converter={StaticResource BoolToColorConverter}, ConverterParameter='#4CAF50,#FFA000'}"
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       VerticalOptions="Center"
                                       MinimumWidthRequest="120"
                                       Margin="5,0" />
                                
                                <!-- Score -->
                                <Label Grid.Column="3" 
                                       Text="{Binding FormattedScore}" 
                                       TextColor="White"
                                       FontSize="14" 
                                       FontAttributes="{Binding HasTakenTest, Converter={StaticResource BoolToFontAttributesConverter}}"
                                       VerticalOptions="Center"
                                       HorizontalOptions="End"
                                       MinimumWidthRequest="60"
                                       Margin="5,0" />
                                
                                <!-- Time -->
                                <Label Grid.Column="4" 
                                       Text="{Binding FormattedTimeSpent}" 
                                       TextColor="White"
                                       FontSize="14" 
                                       VerticalOptions="Center"
                                       HorizontalOptions="End"
                                       MinimumWidthRequest="60"
                                       Margin="5,0" />
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>
    </Grid>
</ContentPage> 