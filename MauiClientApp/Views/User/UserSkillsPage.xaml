<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiClientApp.Views.User.UserSkillsPage"
             BackgroundColor="Black"
             Title="Your Skills">
    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Label Grid.Row="0" 
               Text="Welcome to Carpath.io" 
               TextColor="White"
               FontSize="26"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               Margin="0,20,0,20"/>

        <!-- Page Title -->
        <Label Grid.Row="1" 
               Text="Your Skills Profile" 
               TextColor="White"
               FontSize="22"
               HorizontalOptions="Center"
               Margin="0,0,0,20"/>

        <!-- Main Content -->
        <RefreshView Grid.Row="2" 
                    Command="{Binding RefreshCommand}" 
                    IsRefreshing="{Binding IsLoading}">
            <ScrollView>
                <Grid RowSpacing="15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Status Message -->
                    <Label Grid.Row="0"
                           Text="{Binding StatusMessage}"
                           TextColor="#CCCCCC"
                           HorizontalOptions="Center"
                           Margin="0,0,0,10"
                           IsVisible="{Binding !HasSkills}"/>

                    <!-- Hard Skills Section -->
                    <Frame Grid.Row="1" 
                           BackgroundColor="#333333" 
                           CornerRadius="10" 
                           Padding="15" 
                           Margin="0,5,0,5">
                        <Grid RowSpacing="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Label Grid.Row="0" 
                                   Text="Hard Skills" 
                                   TextColor="White" 
                                   FontSize="18" 
                                   FontAttributes="Bold"
                                   Margin="0,0,0,10"/>

                            <CollectionView Grid.Row="1" 
                                           ItemsSource="{Binding HardSkills}"
                                           EmptyView="No hard skills detected in your CV.">
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Padding="5">
                                            <Frame BackgroundColor="#444444" 
                                                   CornerRadius="5" 
                                                   Padding="10,5">
                                                <Label Text="{Binding .}" 
                                                       TextColor="White"
                                                       FontSize="14"/>
                                            </Frame>
                                        </Grid>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </Grid>
                    </Frame>

                    <!-- Soft Skills Section -->
                    <Frame Grid.Row="2" 
                           BackgroundColor="#333333" 
                           CornerRadius="10" 
                           Padding="15" 
                           Margin="0,5,0,5">
                        <Grid RowSpacing="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Label Grid.Row="0" 
                                   Text="Soft Skills" 
                                   TextColor="White" 
                                   FontSize="18" 
                                   FontAttributes="Bold"
                                   Margin="0,0,0,10"/>

                            <CollectionView Grid.Row="1" 
                                           ItemsSource="{Binding SoftSkills}"
                                           EmptyView="No soft skills detected in your CV.">
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Padding="5">
                                            <Frame BackgroundColor="#444444" 
                                                   CornerRadius="5" 
                                                   Padding="10,5">
                                                <Label Text="{Binding .}" 
                                                       TextColor="White"
                                                       FontSize="14"/>
                                            </Frame>
                                        </Grid>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </Grid>
                    </Frame>
                </Grid>
            </ScrollView>
        </RefreshView>

        <!-- Back Button -->
        <Button Grid.Row="3" 
                Text="Back to Dashboard" 
                Command="{Binding GoBackCommand}"
                BackgroundColor="RoyalBlue"
                TextColor="White"
                CornerRadius="10"
                Margin="0,20,0,0"/>

        <!-- Activity Indicator -->
        <Grid Grid.RowSpan="4" 
              BackgroundColor="#80000000" 
              IsVisible="{Binding IsLoading}">
            <ActivityIndicator IsRunning="{Binding IsLoading}" 
                               Color="White" 
                               HorizontalOptions="Center" 
                               VerticalOptions="Center"/>
        </Grid>
    </Grid>
</ContentPage> 