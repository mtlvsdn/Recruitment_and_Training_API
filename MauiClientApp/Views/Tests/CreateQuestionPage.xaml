<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:MauiClientApp.ViewModels"
             x:Class="MauiClientApp.Views.Tests.CreateQuestionPage"
             Title="{Binding PageTitle}"
             BackgroundColor="Black">

    <ContentPage.BindingContext>
        <viewmodels:CreateQuestionViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <StackLayout Padding="20">
            <!-- Question Frame -->
            <Frame BackgroundColor="#333333" 
                   Padding="15" 
                   Margin="0,0,0,15">
                <StackLayout>
                    <Label Text="Question" 
                           TextColor="White" 
                           FontSize="18" 
                           FontAttributes="Bold"/>
                    <Editor Text="{Binding QuestionText}"
                            Placeholder="Enter your question"
                            PlaceholderColor="Gray"
                            TextColor="White"
                            HeightRequest="100"
                            AutoSize="TextChanges"/>
                </StackLayout>
            </Frame>

            <!-- Answer A Frame -->
            <Frame BackgroundColor="#333333" 
                   Padding="15" 
                   Margin="0,0,0,15">
                <StackLayout>
                    <Label Text="Answer A" 
                           TextColor="White" 
                           FontSize="16" 
                           FontAttributes="Bold"/>
                    <Entry Text="{Binding AnswerA}"
                           Placeholder="Enter Answer A"
                           PlaceholderColor="Gray"
                           TextColor="White"/>
                </StackLayout>
            </Frame>

            <!-- Answer B Frame -->
            <Frame BackgroundColor="#333333" 
                   Padding="15" 
                   Margin="0,0,0,15">
                <StackLayout>
                    <Label Text="Answer B" 
                           TextColor="White" 
                           FontSize="16" 
                           FontAttributes="Bold"/>
                    <Entry Text="{Binding AnswerB}"
                           Placeholder="Enter Answer B"
                           PlaceholderColor="Gray"
                           TextColor="White"/>
                </StackLayout>
            </Frame>

            <!-- Answer C Frame -->
            <Frame BackgroundColor="#333333" 
                   Padding="15" 
                   Margin="0,0,0,15">
                <StackLayout>
                    <Label Text="Answer C" 
                           TextColor="White" 
                           FontSize="16" 
                           FontAttributes="Bold"/>
                    <Entry Text="{Binding AnswerC}"
                           Placeholder="Enter Answer C"
                           PlaceholderColor="Gray"
                           TextColor="White"/>
                </StackLayout>
            </Frame>

            <!-- Answer D Frame -->
            <Frame BackgroundColor="#333333" 
                   Padding="15" 
                   Margin="0,0,0,15">
                <StackLayout>
                    <Label Text="Answer D" 
                           TextColor="White" 
                           FontSize="16" 
                           FontAttributes="Bold"/>
                    <Entry Text="{Binding AnswerD}"
                           Placeholder="Enter Answer D"
                           PlaceholderColor="Gray"
                           TextColor="White"/>
                </StackLayout>
            </Frame>

            <!-- Correct Answer Frame -->
            <Frame BackgroundColor="#333333" 
                   Padding="15" 
                   Margin="0,0,0,15">
                <StackLayout>
                    <Label Text="Correct Answer" 
                           TextColor="White" 
                           FontSize="16" 
                           FontAttributes="Bold"/>
                    <Entry Text="{Binding CorrectAnswer}"
                           Placeholder="Enter the correct answer (must match one of the above answers)"
                           PlaceholderColor="Gray"
                           TextColor="White"/>
                </StackLayout>
            </Frame>

            <!-- Navigation Buttons -->
            <Grid ColumnDefinitions="*,*" ColumnSpacing="15">
                <Button Grid.Column="0"
                        Text="Back"
                        Command="{Binding BackCommand}"
                        BackgroundColor="Gray"
                        TextColor="White"/>
                <Button Grid.Column="1"
                        Text="Next"
                        Command="{Binding NextCommand}"
                        BackgroundColor="RoyalBlue"
                        TextColor="White"
                        IsEnabled="{Binding IsNextEnabled}"/>
            </Grid>
        </StackLayout>
    </ScrollView>
</ContentPage> 